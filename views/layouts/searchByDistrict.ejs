<form class="animate__animated animate__fadeIn" action="/search?type=district" method="POST">
  <div class="columns is-centered m-3">
    <div class="field column is-half-desktop is-full-mobile">
      <label class="label">State</label>
      <div class="control has-icons-right">
        <div class="select">
          <select id="state_dropdown" name="state_id">
            <option class="has-text-weight-bold has-text-primary" value="0">- Select State</option>
              <% states.forEach(state => { %>
                <option value="<%= state.state_id %>" <% if( state.state_id == selectedState ){ %> selected <% } %> >
                  <%= state.state_name %>
                </option>
                <% }) %>
          </select>
        </div>
      </div>
    </div>
    <div class="field column is-half-desktop is-full-mobile">
      <label class="label">District</label>
      <div class="control has-icons-right">
        <div class="select">
          <select id="district_dropdown" name="district_id">
            <option class="has-text-weight-bold has-text-primary">- Select District</option>
            <% districts.forEach(district => { %>
              <option value="<%= district.district_id %>" <% if( district.district_id == selectedDistrict ){ %> selected <% } %> >
                <%= district.district_name %>
              </option>
              <% }) %>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="m-3 is-flex is-justify-content-center is-align-items-center">
    <p class="m-3">Age Group: </p>
    <div class="control">
      <label class="radio">
        <input required type="radio" id="18" name="ageGroup" value="18" />
        18-44
      </label>
      <label class="radio">
        <input checked type="radio" id="45" name="ageGroup" value="45" />
        45+
      </label>
    </div>
  </div>

  <div class="m-3 is-flex is-justify-content-center is-align-items-center">
    <button class="button is-primary">Search Slots</button>
  </div>
</form>